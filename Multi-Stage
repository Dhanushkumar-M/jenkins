pipeline{
  agent any
  environment{
    APP_NAME = "sample-app"
  }
  options{
    timestamps()
  }
  stages{
    stage("Build"){
      steps{
        echo "${APP_NAME} is built..."
      }
    }  
    stage("Test"){
      steps{
        echo "Test is completed.."
      }
    }  
    stage("Package"){
      parallel{
        stage('Create JAR') {
            steps {
                echo "ğŸ“¦ JAR packaged."
            }
        }
        stage('Docker Image') {
            steps {
                echo "ğŸ³ Docker image built."
            }
        }
      }
    }
     stage('Deploy') {
            steps {
                script {
                    if (env.BRANCH_NAME == "main") {
                        echo "ğŸš€ Deploying ${APP_NAME} to PROD..."
                        
                    } else {
                        echo "ğŸš€ Deploying ${APP_NAME} to DEV..."
                       
                    }
                }
            }
        }
   
post {
        success {
            echo "âœ… Pipeline completed successfully!"
        }
        failure {
            echo "âŒ Pipeline failed â€” check logs."
        }
        always {
            echo "ğŸ”” Pipeline run finished (success or fail)."
        }
    }
}
}        
