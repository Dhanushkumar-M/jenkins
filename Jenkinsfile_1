pipeline {
    agent any

    stages {
        stage('Detect Branch') {
            steps {
                script {
                    // Try Jenkins env first
                    def branch = env.BRANCH_NAME

                    if (!branch) {
                        // Fallback to git
                        branch = sh(returnStdout: true, script: "git rev-parse --abbrev-ref HEAD").trim()

                        // Handle detached HEAD (PR merge, etc.)
                        if (branch == "HEAD") {
                            branch = sh(returnStdout: true, script: "git name-rev --abbrev-ref HEAD").trim()
                        }
                    }

                    echo "Environment - ${branch}"

                    if (branch == "main") {
                        echo "Deploying to PROD"
                    } else {
                        echo "Deploying to DEV"
                    }
                }
            }
        }
    }
}
